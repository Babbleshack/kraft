{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "specification_v1.0.json",
  "type": "object",
  "required": ["specification"],

  "properties": {
    "specification": {
      "type": "string"
    },

    "unikraft": {
      "id": "#/properties/unikraft",
      "patternProperties": {
        "^[a-zA-Z0-9._-]+$": {
          "$ref": "#/definitions/unikraft"
        }
      },
      "additionalProperties": false
    },

    "architectures": {
      "id": "#/properties/architectures",
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9._-]+$": {
          "$ref": "#/definitions/architecture"
        }
      },
      "additionalProperties": false
    },

    "libraries": {
      "id": "#/properties/libraries",
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9._-]+$": {
          "$ref": "#/definitions/library"
        }
      },
      "additionalProperties": false
    },

    "platforms": {
      "id": "#/properties/platforms",
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9._-]+$": {
          "$ref": "#/definitions/platform"
        }
      },
      "additionalProperties": false
    },

    "volumes": {
      "id": "#/properties/volumes",
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9._-]+$": {
          "$ref": "#/definitions/volume"
        }
      },
      "additionalProperties": false
    }
  },

  "patternProperties": {"^x-": {}},
  "additionalProperties": false,

  "definitions": {
    "unikraft": {},
    "architecture": {},
    "platform": {},
    "library": {},
    "volume": {},
    "list_or_dict": {
      "oneOf": [
        {
          "type": "object",
          "patternProperties": {
            ".+": {
              "type": ["string", "number", "null"]
            }
          },
          "additionalProperties": false
        },
        {"type": "array", "items": {"type": "string"}, "uniqueItems": true}
      ]
    }
  }
}
